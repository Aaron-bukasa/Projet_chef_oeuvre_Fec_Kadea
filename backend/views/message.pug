extends layout
  
block content
    div(class="demandes h-full grid grid-cols-1 grid-rows-[max-content,auto] gap-y-6")
        div(class="col-start-1 col-end-2 row-start-1 row-end-2")
            h1(class="text-center mb-3 font-extrabold text-xl md:text-2xl lg:text-3xl xl:text-4xl") Message recu
            div(class="flex justify-between gap-x-6")
                div(class="border-4 p-3 my-3 h-max bg-gray-50 rounded-lg w-1/2")
                    h2(class='text-lg font-bold mb-2') Information sur le message
                    p Identification : #{message.id}
                    p Date de reception : #{message.date.toLocaleString('en-GB', { timeZone: 'UTC' })}
                    p Nom : #{message.nom}
                    p Email : #{message.email}
                    div(class='border-4 border-dashed p-3 mt-3')
                        p Objet : #{message.objet}
                        p(class='mt-3') Message : #{message.message}
                div(class="p-3 flex flex-col my-3 gap-y-4 bg-gray-50 rounded-lg w-1/2")
                    h2(class="font-bold text-xl mb-3") Repondre
                    form(class="flex flex-col")
                        input(type="text" placeholder='Objet' class="border-2 rounded-lg p-2 my-1")
                        textarea(name="message", cols="30", rows="5" placeholder="message" class="border-2 rounded-lg p-2 my-1")
                        button(type='submit' class="bg-slate-500 cursor-pointer hover:opacity-80 p-2 font-bold text-white rounded-lg my-2 w-max") Envoyer
        div(class="bg-gray-50 p-3 rounded-lg col-start-1 col-end-2 row-start-2 row-end-3")
            h2(class="font-bold text-xl mb-3") Conversation
