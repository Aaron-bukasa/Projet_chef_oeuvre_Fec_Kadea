extends layout
  
block content
    h1(class="text-center font-extrabold text-xl md:text-2xl lg:text-3xl xl:text-4xl") Message recu
    div(class="w-full md:flex p-3 gap-4")
        div(class="border-2 p-3 flex flex-col my-3 w-[50%]")
            h2(class='text-lg font-bold mb-2') Information sur le message
            p Identification : #{message.id}
            p Date de reception : #{message.date.toLocaleString('en-GB', { timeZone: 'UTC' })}
            p Nom : #{message.nom}
            p Email : #{message.email}
            div(class='border-4 border-dashed p-3 mt-3')
                p Objet : #{message.objet}
                p(class='mt-3') Message : #{message.message}
        div(class="border-2 p-3 my-3 w-[50%]")
            h2(class="font-bold text-xl mb-3") Repondre
            form(class="flex flex-col")
                input(type="text" placeholder='Objet' class="border-2 rounded-lg p-2 my-1")
                textarea(name="message", cols="30", rows="5" placeholder="message" class="border-2 rounded-lg p-2 my-1")
                button(type='submit' class="bg-sky-blue p-2 font-bold text-white rounded-lg my-2 w-max") Envoyer
    div.liste-messages
        h2(class="font-bold text-xl mb-3") Conversation
        table(class="w-full border-2 p-2 mb-6")
            tbody
                each message in message
                    tr
                        td(class="text-center")= response.date.toLocaleString('en-GB', { timeZone: 'UTC' })
                        td(class="text-center")= response.nom
                        td(class="text-center")= response.email
                        td(class="text-center")= response.message
