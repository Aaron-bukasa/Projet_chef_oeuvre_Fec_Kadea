doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/auth.js", defer)
    script(src="/javascripts/main.js", defer)
  body(class="bg-zinc-200")
    div(id='container' class='h-screen w-screen overflow-y-hidden flex flex-col gap-y-6')
      div(class="bg-secondary-blue py-6 px-12 text-white")
        div(class="flex justify-between items-center") 
          div(class="logo")
            img(src="/images/logoFec.svg" alt="logo de la fec" class="w-20")
          div(class='flex gap-x-2 items-center')
            img(src="/images/person.svg", alt="avatar" class="w-8")
            div.name(class='capitalize text-xl font-bold')
      div(class="flex h-full w-full")        
        div(class=" bg-secondary-blue text-white text-xl roboto-bold lg:w-[280px] grid grid-cols-1 grid-rows-[auto,max-content] pt-6 pb-12 font-semibold text-gray-50")
          div(class="row-start-1 row-end-2")
            h1(class="mb-6 text-center") Tableau de bord
            div(class="flex flex-col gap-y-4")
              h2(class='px-6 py-3 hover:opacity-80 hover:bg-slate-600') 
                a(href='/dashboard') Menu
              a(href="/demandes" class="flex items-center gap-x-2 px-6 py-3 hover:opacity-80 hover:bg-slate-600")
                img(src="/images/data_thresholding.svg" class="w-8")
                span Démandes
              div(class="group relative px-6 py-3 hover:opacity-80 hover:bg-slate-600")
                div(class="flex items-center gap-x-2")
                  img(src="/images/users.svg" class="w-8")
                  span Utilisateurs
                  img(src="/images/expand_more.svg", alt="more" class="ml-auto mr-0 w-10 group-hover:rotate-180 transition ease-in-out duration-500")
                ul(class='invisible opacity-0 absolute -top-3 left-full bg-secondary-blue flex flex-col group-hover:opacity-100 group-hover:visible transition ease-in-out duration-500') 
                  li(class='hover:opacity-80 hover:bg-slate-600') 
                    a(href="/users/server/create" class="text-nowrap px-3 py-2 block") Creer un nouveau membre
                  li(class='hover:opacity-80 hover:bg-slate-600') 
                    a(href="/users/server" class="text-nowrap px-3 py-2 block") Gestion des comptes utilisateurs
              a(href="/messages" class="flex items-center gap-x-2 px-6 py-3 hover:opacity-80 hover:bg-slate-600") 
                img(src="/images/mail.svg" class="w-8")
                span Messages
              a(href="/newsletters" class="flex items-center gap-x-2 px-6 py-3 hover:opacity-80 hover:bg-slate-600") 
                img(src="/images/news.svg" class="w-8")
                span NewsLetters
              a(href="/rapport" class="flex items-center gap-x-2 px-6 py-3 hover:opacity-80 hover:bg-slate-600") 
                img(src="/images/monitoring.svg" class="flex items-center gap-x-2" class="w-8")
                span Rapport
          div.logout(class="flex items-center gap-x-3 row-start-2 row-end-3 cursor-pointer mb-6 px-6 py-3 hover:opacity-80 hover:bg-slate-600") 
            img(src="/images/logout.svg", alt="logout" class="w-6")
            span  Se déconnecter
        div(class="roboto-regular overflow-y-scroll w-full p-6")
          block content
